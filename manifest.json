{
  "manifest_version": 3,
  "name": "AI Alt Text Generator",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:1234/*"],
  "action": {
    "default_popup": "popup.html"
  }
}